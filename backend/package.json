{
  "name": "nodejs-blog_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "git push heroku master",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "build:ui": "rm -rf build && cd ../frontend/ && npm run build --prod && cp -r build ../backend",
    "build:ui-dev": "NODE_ENV=dev rm -rf build && cd ../frontend/ && npm run build-dev --prod && cp -r build ../backend",
    "logs:prod": "heroku logs --tail",
    "start": "NODE_ENV=production node index.js",
    "start3001": "PORT=3001 NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "testCoverage": "NODE_ENV=test jest --verbose --collectCoverage --runInBand"
  },
  "author": "Diego J. Romero LÃ³pez",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.10",
    "mongoose-type-email": "^1.0.12",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "jest": "^25.5.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
}
